<?xml version="1.0" encoding="utf-8"?>
<root>

	<settings enableScaling="true" />

	<!-- Background Cover -->
	<element type="BackgroundAlbumCover" brightness="0.4" refreshInterval="EndOfTrack"/>

	<!-- Background Gallery -->
	<!-- <element name="#Gallery" type="Gallery" x="0" y="0" widthDock="x:Panel.Right" width="0" heightDock="y:Panel.Bottom" height="0" aspectRatio="zoomKeep" fillColor="192,0,0,0" interval="30" brightness="0.2" tags="artist" />
	<element type="Block" xAnchor="#Gallery.Left" x="0" yAnchor="#Gallery.Top" y="0" widthDock="x:#Gallery.Right" width="0" heightDock="y:#Gallery.Bottom" height="0" bg="232,0,0,0"/> -->

	<!-- Album Cover -->
	<element name="#Spacer" type="Block" xAnchor="#Gallery.Left" x="0" yAnchor="#Gallery.Top" y="0" widthDock="Panel.Height.10" width="0" heightDock="Panel.Height.10" height="0" bg="0,0,0,0"/>

	<element type="AlbumCover" x="-100" y="-100" width="10" height="10" min="10" max="10"/>
	<element name="#Cover" type="Block" xAnchor="#Spacer.Right" x="0" yAnchor="Panel.10" y="0" align="Top.Left" widthDock="Panel.Height.66" width="0" heightDock="Panel.Height.66" height="0" bg="0,0,0,0"/>

	<element name="#SpacerR" type="Block" xAnchor="Panel.Right" x="0" yAnchor="#Gallery.Top" y="0" widthDock="Panel.Height.10" width="0" heightDock="Panel.Height.10" height="0" bg="0,255,0,0" align="Top.Right"/>
	<element name="#SpacerC" type="Block" xAnchor="#Cover.Right" x="0" yAnchor="#Gallery.Top" y="20" widthDock="x:#SpacerR.Left" width="0" heightDock="Panel.Height.10" height="0" bg="0,255,255,0"/>

	<!-- Album Carousel -->
	<!-- Change "Tracks[x]" to "Albums[x]" if you don't want to see the same album cover repeated many times. -->
	<element name="#Cover_04" type="AlbumCover" id="Albums[4]" xAnchor="#SpacerC.73.9" x="360" yAnchor="#Cover.Bottom" y="-280" align="Bottom.Right" widthDock="Panel.Height.24" width="0" heightDock="Panel.Height.24" height="0" brightness="1.0"/>
	<element name="#Cover_03" type="AlbumCover" id="Albums[3]" xAnchor="#SpacerC.62.5" x="200" yAnchor="#Cover.Bottom" y="-280" align="Bottom.Right" widthDock="Panel.Height.24" width="0" heightDock="Panel.Height.24" height="0" brightness="1.0"/>
	<element name="#Cover_02" type="AlbumCover" id="Albums[2]" xAnchor="#SpacerC.47.3" x="80" yAnchor="#Cover.Bottom" y="-280" align="Bottom.Right" widthDock="Panel.Height.24" width="0" heightDock="Panel.Height.24" height="0" brightness="1.0"/>
	<element name="#Cover_01" type="AlbumCover" id="Albums[1]" xAnchor="#SpacerC.27" x="10" yAnchor="#Cover.Bottom" y="-280" align="Bottom.Right" widthDock="Panel.Height.24" width="0" heightDock="Panel.Height.24" height="0" brightness="1.0"/>
	<element name="#Cover_01" type="AlbumCover" id="Albums[0]" xAnchor="#SpacerC.0" x="10" yAnchor="#Cover.Bottom" y="8" align="Bottom.Right" widthDock="Panel.Height.76" width="0" heightDock="Panel.Height.76" height="0" brightness="1.0"/>

	<!-- Album Info -->
	<element type="Field" id="Title" xAnchor="#Cover.Left" x="-115" yAnchor="#Cover.Bottom" y="0" widthDock="x:Panel.80" width="400" align="left" font="lemon milk" style="Regular" size="82" fg="255,247,230" />
	<element type="Field" id="Artist" xAnchor="#Cover.Left" x="-115" yAnchor="#Cover.Bottom" y="110" widthDock="x:Panel.80" width="300" align="left" font="lemon milk" style="Regular" size="82" fg="255,247,230" />



	<!-- Music Controls -->
	<element type="PlayerBar" xAnchor="Panel.0" x="0" yAnchor="Panel.0" y="0" width="0" height="0"/>

	<element type="Block" xAnchor="#SpacerC.0" x="0" yAnchor="#Cover.Bottom" y="0" widthDock="x:Panel.Right" width="0" heightDock="y:Panel.Bottom" height="0" fg="0,0,0,0" mouseOverFg="0,0,0,0" bg="0,0,0,0" mouseOverBg="0,0,0,0">
	
	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="Panel.Center" x="-90" yAnchor="Panel.Top" y="40" width="190" height="180" onClick="PlayNextAlbum"></element>
	<element type="Text" xAnchor="Panel.Center" x="-105" yAnchor="Panel.Top" y="50" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="120" fg="0,0,0" onClick="PlayNextAlbum" showMouseHand="false">&#xE761;</element>
		
	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="Panel.Center" x="-90" yAnchor="Panel.Center" y="50" width="200" height="200" onClick="PlayPrevious"></element>
	<element type="Text" xAnchor="Panel.Center" x="-125" yAnchor="Panel.Center" y="50" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="150" fg="0,0,0" onClick="PlayPrevious" showMouseHand="false">&#xE100;</element>

	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="Panel.Center" x="195" yAnchor="Panel.Center" y="50" width="450" height="200"> onClick="PlayPause"></element>
	<element type="Text" xAnchor="Panel.Center" x="282" yAnchor="Panel.Center" y="50" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="150" fg="0,0,0" onClick="PlayPause" visibleTrigger="Playing">&#xE103;</element>
	<element type="Text" xAnchor="Panel.Center" x="282" yAnchor="Panel.Center" y="50" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="150" fg="0,0,0" onClick="PlayPause" visibleTrigger="NotPlaying">&#xE102;</element>

	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="#SpacerC.100" x="-125" yAnchor="Panel.Center" y="50" width="200" height="200" onClick="PlayNext"></element>
	<element type="Text" xAnchor="#SpacerC.100" x="-160" yAnchor="Panel.Center" y="50" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="150" fg="0,0,0" onClick="PlayNext" showMouseHand="false">&#xE101;</element>
		
<!-- Time -->
	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="#SpacerC.100" x="-665" yAnchor="Panel.Top" y="40" width="450" height="180"></element>
    <element type="Time" xAnchor="#SpacerC.100" x="-615" yAnchor="#Cover.Bottom" y="-810" widthDock="Panel.50" width="0" font="Jaguar" size="130" fg="0,0,0" brightness="1" ></element>

<!--Mute-->
	<element type="Icon" image="Images\Tablet\buttongold.png" xAnchor="#SpacerC.100" x="-115" yAnchor="#Cover.Bottom" y="-775" width="190" height="180"></element>
    <element type="Text" xAnchor="#SpacerC.100" x="-130" yAnchor="#Cover.Bottom" y="-765" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="122" fg="0,0,0" onClick="VolumeToggleMute" visibleTrigger="VolumeNotMute">&#xE995;</element>
	<element type="Text" xAnchor="#SpacerC.100" x="-130" yAnchor="#Cover.Bottom" y="-765" widthDock="Panel.50" width="0" font="Segoe MDL2 Assets" style="Regular" size="122" fg="0,0,0" onClick="VolumeToggleMute" visibleTrigger="VolumeMute">&#xE992;</element>

<!-- Progress Bar -->
	<element type="ProgressBar" xAnchor="Panel.Left" x="0" yAnchor="Panel.Bottom" y="-5" widthDock="Panel.100" width="0" height="5"  fg="255,247,230" bg="0,0,0,0" ></element>

	</element>
</root>
